@model IEnumerable<RentalKendaraan_070.Models.KondisiKendaraan>

@{
    ViewData["Title"] = "Index";
}

<h2>Tambah Data Kondisi Kendaraan</h2>

<p>
    <a asp-action="Create">Tambah Data Baru</a>
</p>

@using (Html.BeginForm("Index", "KondisiKendarans", FormMethod.Get))
{
    <p>
        NamaKondisi: @Html.DropDownList("ktsd", "Pilih Nama")
        Cari Data : @Html.TextBox("searchString")
        <input type="submit" value="Filter" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayName("Nama Kondisi")*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nama Kondisi</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKondisi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKondisi">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdKondisi">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdKondisi">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
